# Говорит: это корневой конфиг, выше по папкам ничего не ищи
root = true

# ---------------- Общие правила для ВСЕХ файлов ----------------
[*]
# Кодировка файлов: UTF-8 (универсальный стандарт)
charset = utf-8

# Конец строки: LF (\n). Убирает Windows-ад с CRLF (\r\n)
end_of_line = lf

# Вставлять пустую строку в конце файла (чтобы не было "No newline at end of file")
insert_final_newline = true

# Удалять пробелы в конце строк (частая грязь в диффах)
trim_trailing_whitespace = true

# Отступы пробелами, а не табами
indent_style = space

# Размер отступа: 2 пробела
indent_size = 2

# ---------------- Markdown: часто НЕ тримят пробелы ----------------
[*.md]
trim_trailing_whitespace = false

# ---------------- YAML: обычно 2 пробела, ок ----------------
[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2
